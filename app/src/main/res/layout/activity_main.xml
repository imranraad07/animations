<com.google.android.material.circularreveal.CircularRevealLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:scrollbars="none">

        <com.google.android.material.circularreveal.CircularRevealLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="defaultAnimation"
                android:text="Default Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="scaleAnimation"
                android:text="Scale Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="clipAnimation"
                android:text="Clip Animations(sdk >= 23)"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Following animations are custom transtions. animation time: 400ms(medium)"
                app:backgroundTint="@android:color/black" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="translateAnimationLeftRight"
                android:text="Translate Animations Left to Right"
                android:textAllCaps="false"
                app:backgroundTint="@color/sample_red" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="translateAnimationRightLeft"
                android:text="Translate Animations Right to Left"
                android:textAllCaps="false"
                app:backgroundTint="@color/sample_blue" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="translateAnimationTopBottom"
                android:text="Translate Animations Top to Bottom"
                android:textAllCaps="false"
                app:backgroundTint="@color/sample_green" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="translateAnimationBottomTop"
                android:text="Translate Animations Bottom to Top"
                android:textAllCaps="false"
                app:backgroundTint="@color/sample_yellow" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="translateAnimationFade"
                android:text="Translate Animations Fade"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="sharedTransition"
                android:text="Shared Transtion (inside activity)"
                android:textAllCaps="false"
                app:backgroundTint="@android:color/black" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Circular Reveal From Top (disabled)"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/sample_red" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Circular Reveal From Bottom (disabled)"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/sample_yellow" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Circular Reveal From Middle (disabled)"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/sample_green" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Circular Reveal From Touch Point (disabled)"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/sample_blue" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Following animations are overridePendingTransition. animation time: 400ms(medium)"
                app:backgroundTint="@android:color/black" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="zoom"
                android:text="Zoom Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="card"
                android:text="Card Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="split"
                android:text="Split Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="shrink"
                android:text="Shrink Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="inAndOut"
                android:text="In And Out Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="swipeLeft"
                android:text="Swipe Left Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="swipeRight"
                android:text="Swipe Right Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="slideLeft"
                android:text="Slide Left Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="slideRight"
                android:text="Slide Right Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="slideDown"
                android:text="Slide Down Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="slideUp"
                android:text="Slide Up Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="fade"
                android:text="Fade Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="windmill"
                android:text="Windmill Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="diagonal"
                android:text="Diagonal Animations"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="spin"
                android:text="Spin Animations"
                android:textAllCaps="false" />
        </com.google.android.material.circularreveal.CircularRevealLinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.google.android.material.circularreveal.CircularRevealLinearLayout>
